{
  "name": "project-potion",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently 'vite' 'pnpm run server:dev'",
    "dev:server": "tsx watch --clear-screen=false --tsconfig src/server/tsconfig.json src/server/index.ts",
    "build": "pnpm run build:client && pnpm run build:server",
    "build:client": "tsc && vite build",
    "build:server": "esbuild src/server/index.ts --bundle --minify --platform=node --tsconfig=src/server/tsconfig.json --outfile=./dist/server/index.cjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@hocuspocus/extension-database": "^2.5.0",
    "@hocuspocus/server": "^2.5.0",
    "@hocuspocus/transformer": "^2.5.0",
    "@lucia-auth/adapter-prisma": "^3.0.1",
    "@lucia-auth/oauth": "^3.1.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@tiptap/extension-image": "^2.1.8",
    "@tiptap/extension-link": "^2.1.8",
    "@tiptap/extension-task-item": "^2.1.8",
    "@tiptap/extension-task-list": "^2.1.8",
    "@tiptap/pm": "^2.1.8",
    "@tiptap/react": "^2.1.8",
    "@tiptap/starter-kit": "^2.1.8",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "express-ws": "^5.0.2",
    "formidable": "^3.5.1",
    "lucia": "^2.4.2",
    "lucide-react": "^0.274.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "typesense": "^1.7.1",
    "typesense-instantsearch-adapter": "^2.7.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/express-ws": "^3.0.1",
    "@types/formidable": "^3.4.2",
    "@types/node": "^20.5.9",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.1",
    "esbuild": "^0.19.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.29",
    "prisma": "^5.2.0",
    "tailwindcss": "^3.3.3",
    "ts-node-dev": "^2.0.0",
    "tsx": "^3.12.8",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-node": "^0.34.3"
  }
}
